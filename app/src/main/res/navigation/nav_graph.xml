<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="br.com.zup.movieflix.ui.movielist.view.MovieListFragment"
        android:label="Filmes"
        tools:layout="@layout/fragment_movie_list" >
        <action
            android:id="@+id/action_movieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieFavoriteFragment"
        android:name="br.com.zup.movieflix.ui.moviefavorite.view.MovieFavoriteFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_movie_favorite" >
        <action
            android:id="@+id/action_movieFavoriteFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="br.com.zup.movieflix.ui.moviedetail.view.MovieDetailFragment"
        android:label="Detalhe"
        tools:layout="@layout/fragment_movie_list" />
</navigation>